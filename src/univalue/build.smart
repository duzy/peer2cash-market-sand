project (tools/gcc/c++)

files (
    '*.a' '*.lo' '*.la'
    #'*.o' => lib
    #'*.cpp' => lib
)

CXXFLAGS := $(CXXFLAGS)
CXXFLAGS += $(@.variant_cflags) -I"$//include"

lib = libunivalue.a
objects = lib/univalue.o lib/univalue_read.o lib/univalue_write.o

$(lib): lib.a($(lib) $(objects))

use:
	CXXFLAGS += -I"$//include"
	LDFLAGS += -L"$/"
	LDLIBS += -lunivalue

clean:
	println "clean: $."
	remove-all $(lib) $(objects) *.lo *.la .libs/* lib/.deps/*
